# ----------------------------------------
# Environment
# ----------------------------------------
NODE_ENV=production
PORT=9000
LOG_LEVEL=info

# ----------------------------------------
# App Metadata (Template Ready)
# ----------------------------------------
APP_NAME=MyApp
APP_VERSION=1.0.0

# ----------------------------------------
# Database
# ----------------------------------------
DATABASE_URL=postgresql://user:password@host:5432/myapp

# ----------------------------------------
# Frontend + Auth URLs
# ----------------------------------------
FRONTEND_URL=https://app.mydomain.com
BETTER_AUTH_URL=https://api.mydomain.com

# ----------------------------------------
# Auth Security
# ----------------------------------------
BETTER_AUTH_SECRET=SUPER_LONG_RANDOM_SECRET

# ----------------------------------------
# Email (Resend)
# ----------------------------------------
RESEND_API_KEY=CHANGE_ME
EMAIL_FROM="MyApp <no-reply@mydomain.com>"
